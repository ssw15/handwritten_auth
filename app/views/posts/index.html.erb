<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>From name</th>
      <th>From</th>
      <th>Message</th>
      <th>Link</th>
      <th>Facebook</th>
      <th>Facebook created time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user %></td>
        <td><%= post.from_name %></td>
        <td><%= post.from_id %></td>
        <td><%= post.message %></td>
        <td><%= post.link %></td>
        <td><%= post.facebook_id %></td>
        <td><%= post.facebook_created_time %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
